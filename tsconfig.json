{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": true,
    "allowJs": true,
    "outDir": "dist/",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["server", "client", "nodemon.js"],
  "exclude": ["node_modules"]
}
